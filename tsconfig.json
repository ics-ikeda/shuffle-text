{
  "compilerOptions": {
    "strict": true,
    // 未使用のlocal変数に関するエラー
    "noUnusedLocals": true,
    // 未使用のパラメーターに関するエラー
    "noUnusedParameters": true,
    // 関数内のすべてのコードパスが値を返さない場合にエラー
    "noImplicitReturns": true,
    // switchステートメントでフォールスルーケースのエラーを報告
    "noFallthroughCasesInSwitch": true,
    "module": "ES2020",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "target": "ES2018",
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "lib": [
      "ES2021",
      "dom"
    ]
  },
  "files": [
    "src/ShuffleText.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}

